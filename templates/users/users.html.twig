{% extends 'base.html.twig' %}

{% block title %}Users {% endblock %}

{% block body %}

<div>
	<div class="row">
		<div class="col">
			<h2 class="mt-3">Users</h2>
		</div>
	</div>
</div>


<div class="row">
	<div class="col">
		<a href="/users/add" class="btn btn-primary mt-1">
			Add User
		</a>
	</div>
</div>


<div class="row">
	<div class="col-sm-12 col-md-3">
		<h4 class="mt-4">Users List ({{ users|length }})</h4>
		<div class="list-group">
			{% for user in users %}
			<a href="#" class="list-group-item list-group-item-action">
			    {{ user.username }}
			</a>
			{% endfor %}
		</div>
	</div>
</div>



{% endblock %}