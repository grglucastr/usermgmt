{% extends 'base.html.twig' %}

{% block title %} Group Form {% endblock %}

{% block body %}

<div class="row">
	<div class="col">
		<h2>Group Form</h2>
	</div>
</div>
	
<div class="row">	
	<div class="col-sm-4">
		<form action="/groups/add" method="post" >
			<div class="form-group">
				<label for="group_name">Group Name: </label>
				<input class="form-control" name="group_name" id="group_name" required="true" />			
			</div>
			
			<div class="form-group">
				<a class="btn btn-secondary" href="/groups">Cancel</a>
				<button class="btn btn-primary">Save Group</button>
			</div>
		</form>
	</div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}

<script src="{{ asset('js/groupsForm.js') }}"></script>
{% endblock %}